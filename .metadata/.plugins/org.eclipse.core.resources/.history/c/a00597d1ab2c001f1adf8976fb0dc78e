package Application;

import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("Write the number of lines: ");
		int m = sc.nextInt();
		System.out.print("Write the number of columns: ");
		int n = sc.nextInt();

		int[][] matriz = new int[m][n];

		for (int a=0; a < m; a++) {
			for (int b=0; b < n; b++) {
				matriz[a][b] = sc.nextInt();
			}
		}

		System.out.println();
		System.out.print("Write the number that you want search: ");
		int x = sc.nextInt();

		for (int i=0; i < m; i++) {
			for (int c=0; c < n; c++) {
				if (x == matriz[i][c]) {
					System.out.println("Position " + i + ", " + c + ":");
					if ((c - 1) < 0) {
						continue;
					} else {
						System.out.println("Left: " + matriz[i][c - 1]);
					}
					if ( (i - 1) < 0) {
						continue;
					} else {
						System.out.println("Top: " + matriz[i - 1][c]);
					}
					if ((c + 1) > n) {
						continue;
					} else {
						System.out.println("Right: " + matriz[i][c + 1]);
					}
					if ( (i + 1) > m) {
						continue;
					} else {
						System.out.println("Down: " + matriz[i + 1][c]);
					}
				}
			}
		}

		sc.close();
	}
}
